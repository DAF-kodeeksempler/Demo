<html>
<head>
  	<meta http-equiv="Content-Type" content="text/html;charset=ISO-8859-1" />
    <link rel="stylesheet" href="css/style.css" type="text/css" media="screen" />
    <script src="http://openlayers.org/api/2.11/OpenLayers.js" type="text/javascript" ></script>
    <script type="text/javascript" src="../server/Ticket/kfticket.php"></script>
    <!--<script type="text/javascript" src="../server/Ticket/kfticket.ashx"></script>-->
	<script type="text/javascript" src="../lib/VisStedet/Utils.js"></script>
    <script type="text/javascript" src="../lib/VisStedet/Ticket.js"></script>   
    <title>VisStedet Basic map ++</title>

<script>
            function init()
            {


    ticket: '',
	  
    kfticket = new VisStedet.Ticket();
	
    var map = new OpenLayers.Map(
        'mapTag',
        {
            projection: 'EPSG:25832',
            units: 'm',
            maxExtent: new OpenLayers.Bounds(120000,5661139.2,1000000,6500000.0),
            maxResolution: 1638.4,
		    numZoomLevels: 14,
		    controls : []
        }
    );
	


	// Kortvælger start - input til OpenLayers.Control.LayerSwitcher


	//Skærmkort


	var wmts = new OpenLayers.Layer.WMTS({
		name: "Skærmkort",
		url: ["http://a.kortforsyningen.kms.dk/topo_skaermkort", "http://b.kortforsyningen.kms.dk/topo_skaermkort", "http://c.kortforsyningen.kms.dk/topo_skaermkort"],
		style: "default",
		layer: "dtk_skaermkort",
		matrixSet: "View1",
		format: "image/jpeg",
		params: {
			ticket: kfticket
		},
		matrixIds: [
			{identifier: "L00", scaleDenominator: 1638.4/0.00028},
			{identifier: "L01", scaleDenominator: 819.2/0.00028},
			{identifier: "L02", scaleDenominator: 409.6/0.00028},
			{identifier: "L03", scaleDenominator: 204.8/0.00028},
			{identifier: "L04", scaleDenominator: 102.4/0.00028},
			{identifier: "L05", scaleDenominator: 51.2/0.00028},
			{identifier: "L06", scaleDenominator: 25.6/0.00028},
			{identifier: "L07", scaleDenominator: 12.8/0.00028},
			{identifier: "L08", scaleDenominator: 6.4/0.00028},
			{identifier: "L09", scaleDenominator: 3.2/0.00028},
			{identifier: "L10", scaleDenominator: 1.6/0.00028},
			{identifier: "L11", scaleDenominator: 0.8/0.00028},
			{identifier: "L12", scaleDenominator: 0.4/0.00028},
			{identifier: "L13", scaleDenominator: 0.2/0.00028}
		],
		isBaseLayer : true,
		displayInLayerSwitcher : true,
		transitionEffect : 'resize'
	});
    map.addLayer(wmts);




	//Orto foto aka Fly foto



	var ortofoto = new OpenLayers.Layer.WMTS({
		name: "Fly foto",
		url: ["http://a.kortforsyningen.kms.dk/orto_foraar", "http://b.kortforsyningen.kms.dk/orto_foraar", "http://c.kortforsyningen.kms.dk/orto_foraar"],
		style: "default",
		layer: "orto_foraar",
		matrixSet: "View1",
		format: "image/jpeg",
		params: {
			ticket: kfticket
		},
		matrixIds: [
			{identifier: "L00", scaleDenominator: 1638.4/0.00028},
			{identifier: "L01", scaleDenominator: 819.2/0.00028},
			{identifier: "L02", scaleDenominator: 409.6/0.00028},
			{identifier: "L03", scaleDenominator: 204.8/0.00028},
			{identifier: "L04", scaleDenominator: 102.4/0.00028},
			{identifier: "L05", scaleDenominator: 51.2/0.00028},
			{identifier: "L06", scaleDenominator: 25.6/0.00028},
			{identifier: "L07", scaleDenominator: 12.8/0.00028},
			{identifier: "L08", scaleDenominator: 6.4/0.00028},
			{identifier: "L09", scaleDenominator: 3.2/0.00028},
			{identifier: "L10", scaleDenominator: 1.6/0.00028},
			{identifier: "L11", scaleDenominator: 0.8/0.00028},
			{identifier: "L12", scaleDenominator: 0.4/0.00028},
			{identifier: "L13", scaleDenominator: 0.2/0.00028}
		],
		isBaseLayer : true,
		displayInLayerSwitcher : true,
		transitionEffect : 'resize'
	});
    map.addLayer(ortofoto);


	//Skyggekort aka Hill shade


	var dhm = new OpenLayers.Layer.WMTS({
		name: "Hill shade",
		url: ["http://a.kortforsyningen.kms.dk/dhm", "http://b.kortforsyningen.kms.dk/dhm", "http://c.kortforsyningen.kms.dk/dhm"],
		style: "default",
		layer: "hillshade_1_6m",
		matrixSet: "View1",
		format: "image/jpeg",
		visibility: true,
		params: {
			ticket: kfticket
		},
		matrixIds: [
			{identifier: "L00", scaleDenominator: 1638.4/0.00028},
			{identifier: "L01", scaleDenominator: 819.2/0.00028},
			{identifier: "L02", scaleDenominator: 409.6/0.00028},
			{identifier: "L03", scaleDenominator: 204.8/0.00028},
			{identifier: "L04", scaleDenominator: 102.4/0.00028},
			{identifier: "L05", scaleDenominator: 51.2/0.00028},
			{identifier: "L06", scaleDenominator: 25.6/0.00028},
			{identifier: "L07", scaleDenominator: 12.8/0.00028},
			{identifier: "L08", scaleDenominator: 6.4/0.00028},
			{identifier: "L09", scaleDenominator: 3.2/0.00028},
			{identifier: "L10", scaleDenominator: 1.6/0.00028},
			{identifier: "L11", scaleDenominator: 0.8/0.00028},
			{identifier: "L12", scaleDenominator: 0.4/0.00028},
			{identifier: "L13", scaleDenominator: 0.2/0.00028}
		],
		isBaseLayer : false,
		opacity: 0.3,
		displayInLayerSwitcher : true,
		transitionEffect : 'resize'
		
	});
    map.addLayer(dhm);




	// Kortvælger slut


	
	// The buttons and bar in upper left corner:
	map.addControl(new OpenLayers.Control.PanZoomBar());


	// All mouse controls (drag, zoom with mouse wheel. etc)
	map.addControl(new OpenLayers.Control.Navigation());


	// Layer selector in upper right corner. (Base layers show as choices between
	// radio buttons, other layers as selectable checkboxes):
	map.addControl(new OpenLayers.Control.LayerSwitcher({ascending:'false'}));
	

	// Default center and zoom on Copenhagen
	map.setCenter(new OpenLayers.LonLat(724500, 6176450), 10);
    

    
   	 //Show position of mouse
	map.addControl(new OpenLayers.Control.MousePosition());

    	maxExt = new OpenLayers.Bounds(120000, 5661139.2, 958860.8, 6500000);
        maxResolution = (maxExt.top - maxExt.bottom) / 512;
        internalprojection = "EPSG:25832";  
    	var overviewMapOptions;
    	overviewMapOptions = { projection: internalprojection, units: 'm',maxResolution: maxResolution, maxExtent: maxExt };
    	 
	// A little map in the corner
	map.addControl(new OpenLayers.Control.OverviewMap({  maximized: 'true',autoPan:'true', mapOptions: overviewMapOptions }));
    	
   	
   
    


   	// Link to create permalink for the map content
    	map.addControl(new OpenLayers.Control.Permalink('permalink'));


	// A little scale line in the left corner - metric and non metric
	map.addControl(new OpenLayers.Control.ScaleLine());

		

	
	}
</script>
</head>
<body onload="init()">
        <h2>Lidt flere features på kortet - out of the box Open Layers funktioner</h2>
        <div id="mapTag" style="width: 600px; height: 600px"></div>
    </body>
</html>
